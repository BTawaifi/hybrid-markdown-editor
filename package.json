    "clean": "rimraf dist",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "react-textarea-autosize": ">=8"
  },
  "devDependencies": {
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-textarea-autosize": "^8.5.9",
    "rimraf": "^5.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.4.0"
  }
}
