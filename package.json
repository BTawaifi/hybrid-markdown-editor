{
  "name": "hybrid-markdown-editor",
  "version": "1.0.0",
  "description": "Obsidian-like hybrid markdown editor (per-line renderer + inline editing) for React.",
  "license": "MIT",
  "author": "Boutros Tawaifi",
  "repository": {
    "type": "git",
    "url": "https://github.com/BTawaifi/hybrid-markdown-editor"
  },
  "keywords": [
    "markdown",
    "editor",
    "react",
    "obsidian",
    "hybrid"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup --dts-resolve",
