{
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationDir": "dist",
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES2019",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "Bundler",
    "lib": ["ES2019", "DOM"],
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": false,
    "strict": true,
    "types": ["react", "react-dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}


